@model IEnumerable<Eticaret.Core.Entities.Product>

@{
    ViewData["Title"] = "Arama Sonuçları";
}

<h2>Arama Sonuçları: "@ViewBag.Query"</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">Hiçbir ürün bulunamadı.</div>
}
else
{
    <div class="row">
        @foreach (var urun in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="/Img/Product/@(string.IsNullOrEmpty(urun.Image) ? "default.jpg" : urun.Image)"
                         class="card-img-top"
                         alt="@urun.Name"
                         style="height: 200px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@urun.Name</h5>
                        <p class="card-text">@urun.Price ₺</p>
                        <a href="/Products/Details/@urun.Id" class="btn btn-sm btn-primary mt-auto">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
