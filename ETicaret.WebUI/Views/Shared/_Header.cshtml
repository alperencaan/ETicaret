<header style="position: relative; z-index: 1100;">
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!-- Sol Logo -->
            <a class="navbar-brand fw-bold text-dark" asp-controller="Home" asp-action="Index">Alperen Store</a>

            <!-- Mobil Menü Butonu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menü İçeriği -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Sol Menü ve Arama -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-center">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Anasayfa</a>
                    </li>
                    @await Component.InvokeAsync("Categories")
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="ContactUs">İletişim</a>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Products" asp-action="Search" method="get" class="d-flex">
                            <input name="q" type="search" class="form-control" placeholder="Ürün Ara..." aria-label="Search" />
                        </form>
                    </li>
                </ul>

                <!-- Sağ Menü (Giriş / Kullanıcı Paneli) -->
                <ul class="navbar-nav mb-2 mb-lg-0 align-items-center" style="flex-grow:1; justify-content:flex-end; display:flex;">
                    @if (string.IsNullOrEmpty(Context.Session.GetString("user")))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-controller="Account" asp-action="SignIn">
                                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-controller="Account" asp-action="SignUp">
                                <i class="bi bi-person-plus"></i> Kayıt Ol
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link text-success">
                                <i class="bi bi-person-circle"></i> Merhaba, @Context.Session.GetString("user")
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
